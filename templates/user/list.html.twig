{% extends 'base.html.twig' %} {% block title %}Hello UserController!{% endblock %} {% block body %} <main class="user-search">
    <h1><span class="search-title">Search:</span> <span class="search-text">{{ searchText }}</span> </h1> {% for user in userList %} <div class="profile">
        <a href="{{ path('user_profile', {'id': user.id }) }}">
            <img class="profile-picture" src="{{ asset('img/avatar-placeholder.png') }}" width="110" height="110" alt="">
        </a>
        <div class="profile-info">
            <a href="{{ path('user_profile', {'id': user.id }) }}">{{ user.display_name }}</a>
            <p>{{ user.email }}</p>
        </div> {% if user.id != app.user.id %} <div class="follow-button-wrapper">
            <button class="my-button follow-button" value="{{ user.id }}">{% if user.user_target == null %} Follow {% else %} Unfollow {% endif %}</button>
        </div> {% endif%}
    </div> {% endfor %}
</main> {% endblock %}